<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp">

    <!-- Logo/Icono simple -->
    <ImageView
        android:id="@+id/diamond"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop" />

    <!-- Glow invisible para mantener compatibilidad -->
    <View
        android:id="@+id/diamondGlow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Título principal -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIAMANTES PRO PLAYERS"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:alpha="0" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club de Recompensas VIP"
        android:textColor="@color/gold_accent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:alpha="0" />

    <!-- Contenedor de carga -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando tu experiencia..."
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginBottom="15dp"
            android:alpha="0.8" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="6dp"
            android:progressDrawable="@drawable/progress_bar_gradient"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

</LinearLayout>
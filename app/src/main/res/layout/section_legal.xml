<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/section_legal_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_container"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/legal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="PolÃ­tica de Privacidad"
            android:textColor="@color/accent_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/legal_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:lineSpacingExtra="4dp"
            android:text="Cargando texto legal..."
            android:textColor="@color/text_muted"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>
    
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_countdown_dialog"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="ðŸŽ® Bonus de Continuidad"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Mensaje -->
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:lineSpacingExtra="2dp"
        android:text="Tu actividad ha sido registrada."
        android:textColor="#E0E0E0"
        android:textSize="14sp" />

    <!-- Countdown Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:text="Tiempo restante:"
            android:textColor="#B0B0B0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/countdown_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_countdown_number"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:minWidth="60dp"
            android:paddingHorizontal="18dp"
            android:paddingVertical="6dp"
            android:text="10"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- BotÃ³n Cancelar -->
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_cancel_button"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_container"
    android:minHeight="140dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Badge "Anuncio" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anuncio"
            android:textSize="10sp"
            android:textColor="@color/text_muted"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/rounded_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginBottom="8dp" />

        <!-- Header: Icono + Título + Anunciante -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Icono de la app -->
            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:contentDescription="App Icon" />

            <!-- Título y Anunciante -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Título del anuncio (Headline) -->
                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/montserrat_bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Anunciante -->
                <TextView
                    android:id="@+id/ad_advertiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/text_muted"
                    android:fontFamily="@font/montserrat_regular"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Rating con estrellas -->
            <RatingBar
                android:id="@+id/ad_stars"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:progressTint="@color/gold_accent"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Descripción/Cuerpo del anuncio -->
        <TextView
            android:id="@+id/ad_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_muted"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="6dp" />

        <!-- Imagen principal (Media View) -->
        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background" />

        <!-- Botón de Call-to-Action -->
        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instalar"
            android:textColor="@color/white"
            android:backgroundTint="@color/accent_color"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="13sp"
            android:padding="10dp"
            android:layout_gravity="center" />

    </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <!-- PADDING VERTICAL PARA CONTENIDO, PERO SIN PADDING HORIZONTAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:id="@+id/giveawayInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_container"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:letterSpacing="0.1"
                    android:text="SORTEO SEMANAL"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/countdownLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="Termina en:"
                        android:textColor="#80FFFFFF"
                        android:textSize="9sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:letterSpacing="0.05"
                        android:text="0d 0h 0m"
                        android:textColor="#00A8FF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/normalStateContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="2.2"
                        android:background="@drawable/background_prizes_wrap"
                        android:orientation="vertical"
                        android:padding="6dp">

                        <TextView
                            android:id="@+id/tvWeeklyPrize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Premios de esta semana"
                            android:textColor="#00A8FF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="SmallSp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_prize_gold"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/prize1Text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:text="1,000 ðŸ’Ž"
                                    android:textColor="#00A8FF"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1er Lugar"
                                    android:textColor="#99FFFFFF"
                                    android:textSize="8sp"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_prize_blue"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/prize2Text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:text="500 ðŸ’Ž"
                                    android:textColor="#00A8FF"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2do Lugar"
                                    android:textColor="#99FFFFFF"
                                    android:textSize="8sp"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background_prize_darkblue"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/prize3Text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:text="200 ðŸ’Ž"
                                    android:textColor="#0088cc"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3er Lugar"
                                    android:textColor="#99FFFFFF"
                                    android:textSize="8sp"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:background="@drawable/background_status"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:minHeight="32dp">

                            <LinearLayout
                                android:id="@+id/sorteoButtonContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/background_badge_active_pulse"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/sorteoButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:text="ACTIVO"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    tools:ignore="SmallSp" />
                            </LinearLayout>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/sorteoButtonSubtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Sorteo en curso"
                            android:textAlignment="center"
                            android:textColor="#99FFFFFF"
                            android:textSize="7sp"
                            tools:ignore="SmallSp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/processingStateContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_prizes_wrap"
                    android:gravity="center"
                    android:minHeight="80dp"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/processingSpinner"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:indeterminateTint="#00A8FF" />

                    <TextView
                        android:id="@+id/processingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="PROCESANDO"
                        android:textColor="#00A8FF"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/processingMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Espera un momento..."
                        android:textColor="#99FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/revealStateContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_prizes_wrap"
                    android:gravity="center"
                    android:minHeight="80dp"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/revealCountdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="00:00"
                        android:textColor="#f59e0b"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/winnerRevealedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_prizes_wrap"
                    android:gravity="center"
                    android:minHeight="80dp"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/winnerIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Ganador: 12345"
                        android:textColor="#00A8FF"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prizeWonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Premio: 1,000 ðŸ’Ž"
                        android:textColor="#99FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!-- BANNER TOP HOME - ID ÃšNICO CORREGIDO -->
        <FrameLayout
            android:id="@+id/home_banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:minHeight="50dp"
            android:maxHeight="90dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/myProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_container"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="ID de Jugador:"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/player_id_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <TextView
                        android:id="@+id/myPlayerId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_bold"
                        android:maxLines="1"
                        android:text="Toca para configurar"
                        android:textColor="@color/accent_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/edit_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="6dp"
                        android:contentDescription="Editar ID"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/accent_color" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="4dp"
                android:background="@color/border_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Mis Pases de Sorteo:"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/myPasses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="0"
                    android:textColor="@color/pass_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Tickets Actuales:"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/myTickets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="0"
                    android:textColor="@color/accent_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Meta: 1,000 Tickets = 1 Pase"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/pass_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/background_progress" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gameArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_container"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="RULETA DE LA SUERTE"
                android:textColor="@color/accent_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Gira y gana hasta 100 tickets por jugada"
                android:textAlignment="center"
                android:textColor="@color/text_muted"
                android:textSize="11sp" />

            <GridLayout
                android:id="@+id/grid_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:columnCount="4"
                android:rowCount="3"
                android:useDefaultMargins="true" />

            <Button
                android:id="@+id/spin_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_spin"
                android:fontFamily="@font/montserrat_bold"
                android:text="GIRAR RULETA"
                android:textColor="@color/primary_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Giros Disponibles"
                        android:textColor="@color/pass_color"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Usa giros para jugar"
                        android:textColor="@color/text_muted"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/spins_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_spins_count"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:gravity="center"
                    android:minWidth="45dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:text="0"
                    android:textColor="@color/accent_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/get_spins_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/accent_color"
                android:fontFamily="@font/montserrat_bold"
                android:text="Ver Video para Giros (+10)"
                android:textColor="@color/primary_bg"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- TOP 5 DE LA SEMANA - ID ÃšNICO INDEPENDIENTE -->
        <FrameLayout
            android:id="@+id/top5_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_container"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="TOP 5 DE LA SEMANA"
                    android:textColor="@color/green_accent"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mini_leaderboard_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_leaderboard_mini" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</ScrollView>
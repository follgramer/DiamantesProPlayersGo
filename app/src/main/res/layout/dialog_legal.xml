<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:id="@+id/dialog_legal_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@color/secondary_bg"
        android:elevation="16dp">

        <!-- Header con título y botón cerrar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:text="Título"
                android:textColor="@color/accent_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:tint="@color/text_muted" />

        </LinearLayout>

        <!-- Contenido scrolleable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="6dp"
                android:padding="20dp"
                android:text="Contenido aquí..."
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:justificationMode="inter_word" />

        </ScrollView>

        <!-- Footer con botón -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/container_bg"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/btn_understood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_spin"
                android:fontFamily="@font/montserrat_bold"
                android:text="Entendido"
                android:textColor="@color/primary_bg"
                android:minWidth="120dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Contenedor principal del modal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FFFFFF"
        android:elevation="12dp"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Icono y título principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <!-- Título con emoji -->
            <TextView
                android:id="@+id/tvTituloConsentimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="🔐 Consentimiento de Privacidad"
                android:textColor="#1976D2"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Subtítulo explicativo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Para mantener esta app gratuita y ofrecerte la mejor experiencia"
            android:textColor="#424242"
            android:textSize="14sp"
            android:textStyle="italic" />

        <!-- Lista de permisos con iconos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Permiso 1: Anuncios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#E3F2FD"
                    android:gravity="center"
                    android:text="📺"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Mostrar anuncios relevantes para ganar premios"
                    android:textColor="#212121"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Permiso 2: Análisis -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#E3F2FD"
                    android:gravity="center"
                    android:text="📊"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Analizar el uso para mejorar la experiencia"
                    android:textColor="#212121"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Permiso 3: Notificaciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#E3F2FD"
                    android:gravity="center"
                    android:text="🔔"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Enviarte notificaciones de sorteos y premios"
                    android:textColor="#212121"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Permiso 4: Seguridad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#E3F2FD"
                    android:gravity="center"
                    android:text="🛡️"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Proteger tus datos según políticas GDPR"
                    android:textColor="#212121"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Mensaje de seguridad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#E8F5E8"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="🔒"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Tus datos están protegidos y nunca se comparten con terceros sin tu consentimiento."
                android:textColor="#2E7D32"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Enlaces legales - Clickeable y mejorado -->
        <TextView
            android:id="@+id/textoLegalCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:padding="8dp"
            android:text="📋 Al aceptar, también aceptas nuestras Políticas de Privacidad y Términos y Condiciones (toca para leer)"
            android:textColor="#1976D2"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Botones apilados verticalmente con mejor diseño -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Botón ACEPTAR (arriba, verde con gradiente) -->
            <Button
                android:id="@+id/btnAceptarConsentimiento"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#4CAF50"
                android:elevation="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="✅ Aceptar y Continuar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Botón NO ACEPTAR (abajo, gris más suave) -->
            <Button
                android:id="@+id/btnRechazarConsentimiento"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#757575"
                android:elevation="2dp"
                android:fontFamily="sans-serif"
                android:text="❌ No Aceptar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Nota final pequeña -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Puedes cambiar estas preferencias en cualquier momento desde la configuración de la app."
            android:textColor="#757575"
            android:textSize="10sp"
            android:textStyle="italic" />

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_ban.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg"
    tools:context=".BanActivity">

    <!-- Scroll container para contenido largo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Icono principal -->
            <TextView
                android:id="@+id/ban_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚫"
                android:textSize="80sp"
                android:layout_marginBottom="16dp" />

            <!-- Título principal -->
            <TextView
                android:id="@+id/ban_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta Suspendida"
                android:textSize="28sp"
                android:textColor="@color/danger_color"
                android:fontFamily="@font/montserrat_bold"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/ban_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu cuenta ha sido suspendida"
                android:textSize="16sp"
                android:textColor="@color/text_muted"
                android:fontFamily="@font/montserrat_regular"
                android:textAlignment="center"
                android:layout_marginBottom="24dp" />

            <!-- ID del jugador -->
            <TextView
                android:id="@+id/player_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 12345"
                android:textSize="14sp"
                android:textColor="@color/accent_color"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@drawable/background_container"
                android:padding="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Contenedor de tiempo restante (solo para baneos temporales) -->
            <LinearLayout
                android:id="@+id/countdown_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_container"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/time_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo restante:"
                    android:textSize="14sp"
                    android:textColor="@color/text_muted"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/countdown_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="32sp"
                    android:textColor="@color/warning_color"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/expiry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expira: 01/01/2024 12:00"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <!-- Motivo del baneo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_container"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motivo de la suspensión:"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ban_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Violación de las normas de la comunidad"
                    android:textSize="14sp"
                    android:textColor="@color/text_muted"
                    android:fontFamily="@font/montserrat_regular"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- Información de contacto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_container"
                android:padding="16dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Crees que es un error?"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puedes solicitar una revisión contactando a:"
                    android:textSize="13sp"
                    android:textColor="@color/text_muted"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/contact_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="contacto@follgramer.com"
                    android:textSize="14sp"
                    android:textColor="@color/accent_color"
                    android:fontFamily="@font/montserrat_semibold"
                    android:background="@drawable/background_spins_count"
                    android:padding="8dp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Botón de contacto -->
                <Button
                    android:id="@+id/contact_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📧 Contactar Soporte"
                    android:textColor="@color/primary_bg"
                    android:backgroundTint="@color/accent_color"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Botón de verificar estado (solo para baneos temporales) -->
                <Button
                    android:id="@+id/retry_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔄 Verificar Estado"
                    android:textColor="@color/primary_bg"
                    android:backgroundTint="@color/warning_color"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Botón de salir -->
                <Button
                    android:id="@+id/exit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚪 Salir de la App"
                    android:textColor="@color/text_color"
                    android:backgroundTint="@color/danger_color"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Espaciado inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true">

    <!-- Contenedor del modal centrado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical">

        <!-- Modal principal con bordes dorados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_welcome_modal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Botón cerrar (X) -->
            <ImageView
                android:id="@+id/btnCloseWelcome"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/ic_close"
                android:contentDescription="Cerrar" />

            <!-- Título Principal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"
                android:text="🎉 ¡BIENVENIDO!"
                android:textColor="@color/gold_accent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Subtítulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:text="DIAMANTES PRO PLAYERS"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Contenedor de pasos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <!-- Paso 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/background_welcome_step"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <!-- Número del paso -->
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/background_step_number_gold"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/primary_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Contenido del paso -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎰 GIRA Y GANA DIAMANTES"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hasta 100 tickets por cada giro"
                            android:textColor="#E0E0E0"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Paso 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/background_welcome_step"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/background_step_number_gold"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/primary_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎫 ACUMULA PASES PARA GANAR"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cada 1,000 tickets = 1 PASE para el sorteo"
                            android:textColor="#E0E0E0"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Paso 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/background_welcome_step"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/background_step_number_gold"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/primary_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏆 SORTEOS SEMANALES"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,000 Diamantes todos los domingos"
                            android:textColor="#E0E0E0"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Paso 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_welcome_step"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/background_step_number_gold"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/primary_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💎 RECIBE TU PREMIO"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrega garantizada en menos de 24 horas"
                            android:textColor="#E0E0E0"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Regalo de bienvenida -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_container"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="🎁 REGALO: 10 GIROS GRATIS"
                    android:textColor="@color/gold_accent"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Checkbox "No volver a mostrar" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_container"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/checkboxDontShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:buttonTint="@color/gold_accent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No mostrar este tutorial otra vez"
                    android:textColor="#E0E0E0"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Botón principal -->
            <Button
                android:id="@+id/btnStartPlaying"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/background_button_gold"
                android:text="🚀 ¡EMPEZAR A GANAR!"
                android:textColor="@color/primary_bg"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>

    <!--
    NOTA IMPORTANTE: Si no tienes estos drawables, puedes usar colores directos:

    En lugar de:
    android:background="@drawable/background_welcome_modal"

    Usar:
    android:background="#1E1E1E"

    En lugar de:
    android:background="@drawable/background_welcome_step"

    Usar:
    android:background="#2E2E2E"

    Etc.
    -->
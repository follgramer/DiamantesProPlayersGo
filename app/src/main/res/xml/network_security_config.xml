<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración para AdMob/Google Ads -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Dominios de Google/AdMob -->
        <domain includeSubdomains="true">doubleclick.net</domain>
        <domain includeSubdomains="true">googleads.g.doubleclick.net</domain>
        <domain includeSubdomains="true">googlesyndication.com</domain>
        <domain includeSubdomains="true">googleadservices.com</domain>
        <domain includeSubdomains="true">google-analytics.com</domain>
        <domain includeSubdomains="true">gstatic.com</domain>
        <domain includeSubdomains="true">google.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>

        <!-- Firebase -->
        <domain includeSubdomains="true">firebaseio.com</domain>
        <domain includeSubdomains="true">firebase.googleapis.com</domain>

        <!-- AdMob específicos -->
        <domain includeSubdomains="true">admob.com</domain>
        <domain includeSubdomains="true">app-measurement.com</domain>

        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>

    <!-- Configuración base -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>